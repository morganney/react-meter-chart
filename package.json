{
  "name": "react-meter-chart",
  "version": "2.0.0",
  "description": "React component for linearly charting a value against a target range bounded by a max and min, much like an HTML meter element.",
  "type": "module",
  "main": "./dist/component.mjs",
  "module": "./dist/component.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/component.d.mts",
        "default": "./dist/component.mjs"
      },
      "require": {
        "types": "./dist/component.d.cts",
        "default": "./dist/component.cjs"
      },
      "default": "./dist/component.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/component.d.cts",
  "sideEffects": false,
  "engines": {
    "node": ">=12.20.0"
  },
  "scripts": {
    "prettier": "prettier -w *.{ts,tsx} src/*.{ts,tsx} test/*.tsx",
    "check-types": "tsc --noEmit",
    "dev": "vite",
    "build:types": "tsc -p ./tsconfig.types.json",
    "build:vite": "tsc && vite build",
    "build": "npm run build:types && npm run build:vite && tsx demo.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run --coverage",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.4.8",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^22.1.0",
    "prettier": "^3.2.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "styled-components": "^5.3.11",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-specifier": "^1.0.1",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "styled-components": ">=5"
  },
  "keywords": [
    "react",
    "meter",
    "chart",
    "target",
    "range",
    "bounded",
    "low",
    "high",
    "min",
    "max"
  ],
  "files": [
    "dist"
  ],
  "author": "Morgan Ney <morganney@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morganney/react-meter-chart.git"
  },
  "bugs": {
    "url": "https://github.com/morganney/react-meter-chart/issues"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 90,
    "semi": false,
    "singleQuote": true
  }
}
